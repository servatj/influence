{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": false,
    "declaration": false,
    "outDir": ".",
    "removeComments": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "dist",
  ]
}